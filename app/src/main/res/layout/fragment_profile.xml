<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.TechniqueFragment"
    android:paddingHorizontal="15dp"
    android:paddingVertical="20dp"
    android:background="@color/timberWolf">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textSize="24sp"
            android:paddingTop="0dp"
            android:paddingStart="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_edit_profile"
            android:layout_width="120dp"
            android:layout_height="25dp"
            android:text="Edit Details"
            app:layout_constraintStart_toEndOf="@+id/username"
            app:layout_constraintTop_toTopOf="@+id/username"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:background="@drawable/style_rounded_et"
            android:backgroundTint="@color/caribbeanCurrent"/>

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#E0E0E0"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_edit_profile"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/information"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Information"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/food_allergies"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Food Allergies:"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_edit_allergies"
                        android:layout_width="140dp"
                        android:layout_height="25dp"
                        android:text="Edit Allergies"
                        android:layout_marginStart="8dp"
                        android:textColor="@color/white"
                        android:background="@drawable/style_rounded_et"
                        android:backgroundTint="@color/caribbeanCurrent"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/allergies_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/bookmarked_techniques_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bookmarked Techniques:"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp" />

                <LinearLayout
                    android:id="@+id/bookmarked_techniques_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/favorite_recipes_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Favourite Recipes:"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp" />

                <LinearLayout
                    android:id="@+id/favorite_recipes_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="4dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_logout"
                    android:layout_width="140dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="30dp"
                    android:text="Log Out"
                    android:textColor="@color/white"
                    android:background="@drawable/style_rounded_et"
                    android:backgroundTint="@color/caribbeanCurrent"/>
            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
